    <title>Register V1</title>
</head>
<body>


<nav class="navbar navbar-expand-lg navbar-light navbar-laravel">
    <div class="container">
    <a class="navbar-brand" href="#">Thay đổi mật khẩu</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
 
    </div>
    </div>
</nav>


<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header"></div>
                        

                        <div class="card-body">
							 
                            <form name="my-form" action="/changepassword" method="post">
                                
                            	<div class="form-group row">
                                    <label for="full_name" class="col-md-4 col-form-label text-md-right"></label>
                                    <div class="col-md-6">
                                        <input  type="text" hidden="true" id="full_name" class="form-control" name="_id" value="<%=account._id%>">
                                    </div>
                                </div>

                               


                                <div class="form-group row">
                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">Mật khẩu cũ</label>
                                    <div class="col-md-6">
                                        <input type="password" id="email_address" value="" class="form-control" name="oldpassword">
                                    </div>
                                </div>
								
								
                                

                                <div class="form-group row">
                                    <label for="phone_number" class="col-md-4 col-form-label text-md-right">Mật khẩu mới</label>
                                    <div class="col-md-6">
                                        <input type="password" id="phone_number" value="" class="form-control" name= "newpassword">
                                    </div>

                                </div>


                                <div class="form-group row">
                                    <label for="gender" class="col-md-4 col-form-label text-md-right">Nhập lại mật khẩu mới</label>
                                    <div class="col-md-6">
                                        <input type="password" id="gender" value="" class="form-control" name="renewpassword">
                                    </div>
                                </div>
                                    <div class="col-md-6 offset-md-6">
                                        <button type="submit" class="btn btn-primary">
                                        Cập nhật
                                        </button>
										
                                    </div>
							
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>

</main>
<script src="/admin/register/register.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
