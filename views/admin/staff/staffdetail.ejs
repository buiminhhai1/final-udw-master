<!DOCTYPE html>
<html lang="en-us">

<head>
     <%include ../header %>
</head>

<body class="layout layout-vertical layout-left-navigation layout-above-toolbar layout-above-footer">
    <main>
      
		  <div id="wrapper">
            <%include ../sidebar%>

			<%include editstaffdialog%>
          <div class="content-wrapper">
                <div class="content custom-scrollbar ps ps--active-y">
                    <div >
                        <!-- HEADER -->
                        <div class="text-auto row no-gutters align-items-center justify-content-between p-6">

                            <div class="row no-gutters align-items-center">
                                <div >
                                    <img  src="<%=user.ImageAvatar%>" height = "200px" width = "150px"/>
                                </div>
                                <h3 class="my-name-user"><%=user.DisplayName%></h3>
                            </div>
                         <button type="button" class="btn btn-primary my-button" data-toggle="modal" data-target="#my-staff-dialog" onclick = "myfunction()">
						 Cập nhật thông tin 	
						 </button>
                        </div>
                        <!-- / HEADER -->

			
						<div class="container">
						  <div class="row">
							<div class="col-sm-10">
							  <form class="my-form">
								
								<div id="gender-user">
									<h5><i class="fa icon-gender-transgender"></i>Giới tính: <%=user.Gender%></h5>
								</div>
								
								<div id="date-birth-user">
									<h5 ><i class="fa fa-calendar"></i> Ngày sinh: <%=user.DateOfBirth%></h5>
								</div>
								
								<div id="phone-user">
									<h5><i class="fa fa-phone"></i>Điện thoại: <%=user.Phone%></h5>
								</div>
								<div id="email-user">
									<h5><i class="fa fa-info"></i>Email: <%=user.Email%></h5>
								</div>
												
								<div id="address-user">
									<h5><i class="fa fa-location-arrow"></i>Địa chỉ: <%=user.Address%></h5>
								</div>
										
								<div id="role-user">
									<h5><i class="fa icon-account-card-details"></i>Ngày đăng ký: <%=user.DateContact%></h5>
								
								</div>
								<div id="info-user">
									<h5><i class="fa  icon-details"></i>Thông tin thêm: <%=user.MoreInfo%></h5>
								
								</div>
							</form>
						
							</div>
							<div class="col-sm-1">  
							</div>
							
						  </div>
						</div>
						</div>

                    <script type="text/javascript">
                    	
                    		function myfunction(){
              $('#edit-user-id').attr('value','<%=user._id%>');
              $('#edit-user-displayname').attr('value','<%=user.DisplayName%>');
              $('#edit-user-email').attr('value','<%=user.Email%>');
              $('#edit-user-birthday').attr('value','<%=user.DateOfBirth%>');
              $('#edit-user-gender').attr('value','<%=user.Gender%>');
              $('#edit-user-avatar').attr('value','<%=user.ImageAvatar%>');
              $('#edit-user-address').attr('value','<%=user.Address%>');
              $('#edit-user-datecontact').attr('value','<%=user.DateContact%>');
              $('#edit-user-phone').attr('value','<%=user.Phone%>');
          }
                    </script>

                <div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; height: 471px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 325px;"></div></div></div>
            </div>
		</div>
		  
	</main>	
</body>
	
</html>